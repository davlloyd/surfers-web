    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web: app.py launch",
            "type": "python",
            "request": "launch",
            "program": "app.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Web: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debugger",
                "--reload",
                "--port", "8000"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Web: PyTest",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "module": "pytest",
            "args": [
            ],
            "env": {
                "FLASK_ENV": "testing",
                "FLASK_DEBUG": "1"
            }
        }
    ]
}